<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/white1">

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/RedTheme"
	        android:gravity="center"
	        android:padding="10dp"
	        android:text="@string/exchange"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <ImageView
	        android:id="@+id/iv_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/btn_back_yellow"
	        android:clickable="true"
	        android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:onClick="back"
	        android:src="@drawable/back_selected" />

    </RelativeLayout>
    
        
        <TextView
            android:id="@+id/tv_ex_title" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q币1个"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/grey"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/graythem1"/>
        
        <TextView 
            android:id="@+id/tv_ex_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eg_qb"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/grey"/>
        
        <TableLayout 
	        android:layout_width="match_parent"  
	    	android:layout_height="wrap_content"  
	    	android:stretchColumns="*" 
	    	android:background="@color/RedTheme"
	    	android:layout_margin="10dp">  
		    <TableRow 
		        android:layout_margin="1dp">  
		        <TextView   
		            android:text="@string/need_exchange" 
		            android:background="@color/white1"
		            android:textColor="@color/grey"    
		            android:layout_margin="1dip"
		            android:layout_width="0.0dip"
		            android:padding="8dip"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:textSize="17sp"/>  
		        <TextView   
		            android:id="@+id/tv_ex_xb"
		            android:text="10万" 
		            android:background="@color/white1"
		            android:textColor="@color/RedTheme"   
		            android:gravity="center"
		            android:layout_width="0.0dip"
		            android:padding="8dip"
		            android:layout_weight="1"
		            android:layout_margin="1dp"
		            android:textSize="17sp"/>  
		    </TableRow> 
    	</TableLayout>
        
    	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:padding="10dp"
            android:background="@drawable/shape_top_corner_no_bottom_line">

                <TextView
                    android:id="@+id/tv_ex_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="@string/qq"
                    android:textColor="@color/grey"
                    android:textSize="17.0sp" />
                
                <TextView
                    android:id="@+id/tv_ex_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:text="88888888"
                    android:textColor="@color/grey"
                    android:textSize="17.0sp" />
        </LinearLayout>
        
    	<LinearLayout
    	    android:id="@+id/ll_ex_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:padding="10dp"
            android:background="@drawable/btn_style_red"
            android:clickable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dg_confirm"
                    android:textColor="@color/white1"
                    android:textSize="20.0sp" 
                    android:gravity="center_horizontal"/>
        </LinearLayout>
    
    
</LinearLayout>











