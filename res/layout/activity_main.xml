<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.chuannuo.qianbaosuoping.view.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/console_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" 
        android:visibility="visible">

        <TextView 
    		android:layout_width="match_parent"
    		android:layout_height="1dip" 
    		android:background="@color/RedTheme"/>
        
        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:background="@color/white1"
            android:gravity="center"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

	            
	            <RadioButton
	                android:id="@+id/main_tab_home"
	                style="@style/main_tab_bottom"
	                android:drawableTop="@drawable/main_tab_home_selector"
	                android:tag="radio_button0" 
                	android:text="收益"
                	android:textSize="14sp"
                	android:textColor="@drawable/tab_textcolor_selector" 
                	android:checked="true"/>
            
            <RadioButton
                android:id="@+id/main_tab_exchange"
	            style="@style/main_tab_bottom"
	            android:drawableTop="@drawable/main_tab_exchange_selector"
	            android:tag="radio_button1"
                android:text="兑换"
                android:textSize="14sp"
                android:textColor="@drawable/tab_textcolor_selector" />
            
            <RadioButton
                    android:id="@+id/main_tab_earn"
	                style="@style/main_tab_bottom"
	                android:drawableTop="@drawable/main_tab_earn_selector"
	                android:tag="radio_button2"
                    android:text="赚"
                    android:textSize="14sp"
                    android:textColor="@drawable/tab_textcolor_selector" />
            
            <RadioButton
                    android:id="@+id/main_tab_snatch"
	                style="@style/main_tab_bottom"
	                android:drawableTop="@drawable/main_tab_snatch_selector"
	                android:tag="radio_button3"
                    android:text="夺宝"
                    android:textSize="14sp"
                    android:textColor="@drawable/tab_textcolor_selector" />

            <RadioButton
                android:id="@+id/main_tab_me"
	            style="@style/main_tab_bottom"
	            android:drawableTop="@drawable/main_tab_me_selector"
	            android:tag="radio_button4"
                android:text="我"
                android:textSize="14sp"
                android:textColor="@drawable/tab_textcolor_selector" />

            <RadioButton
                android:id="@+id/main_tab_more"
	            style="@style/main_tab_bottom"
	            android:drawableTop="@drawable/main_tab_more_selector"
	            android:tag="radio_button5"
                android:text="更多"
                android:textSize="14sp"
                android:textColor="@drawable/tab_textcolor_selector"/>
		</RadioGroup>
    </LinearLayout>
</RelativeLayout>