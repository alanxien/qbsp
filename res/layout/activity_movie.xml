<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/RedTheme"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="电影"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_yellow"
            android:clickable="true"
            android:onClick="back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/back_selected" />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView 
            android:id="@+id/am_iv_logo"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:src="@drawable/picture_loading"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/am_iv_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:layout_marginBottom="10dp"/>
            
            <TextView 
                android:id="@+id/movie_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_alias"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_type"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_director"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_performer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_performer"
                android:maxLines="2"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_area"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_subtitles"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
            
            <TextView 
                android:id="@+id/movie_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_date"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/graythem1"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>




