<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white1">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/RedTheme"
	        android:gravity="center"
	        android:padding="10dp"
	        android:text="@string/promote_task"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:textStyle="bold" />
	    
	    <ImageView
	        android:id="@+id/iv_share"
	        android:layout_width="50dp"
	        android:layout_height="45dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:clickable="true"
	        android:onClick="share"
	        android:padding="5dp"
	        android:paddingRight="15dp"
	        android:src="@drawable/share" 
	        android:background="@drawable/btn_back_yellow"
	        android:visibility="gone"/>

	    <ImageView
	        android:id="@+id/iv_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:background="@drawable/btn_back_yellow"
	        android:clickable="true"
	        android:onClick="back"
	        android:src="@drawable/back_selected" />

    </RelativeLayout>
    <ScrollView 
        android:layout_weight="4"
        android:layout_width="fill_parent"
        android:layout_height="0dp">"
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datebg_complete1"
            android:layout_marginRight="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_1"
            android:textColor="@color/grey"
            android:textSize="17sp" 
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datebg_complete2"
            android:layout_marginRight="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_2"
            android:textColor="@color/grey"
            android:textSize="17sp" 
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datebg_complete3"
            android:layout_marginRight="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_3"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"/> 
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datebg_complete4"
            android:layout_marginRight="10dp"/>
        
        <TextView
            android:id="@+id/tv_step_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_4"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datebg_complete5"
            android:layout_marginRight="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_5"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            
            
            <LinearLayout 
                android:id="@+id/ll_weixin_friends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_selector"
                android:clickable="true">
                
            	<ImageView
                	android:layout_width="fill_parent"
            		android:layout_height="60dp"
            		android:src="@drawable/umeng_socialize_wechat" />
            	<TextView 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:text="微信好友"
                	android:gravity="center_horizontal"
                	android:textColor="@color/grey"
                	android:paddingBottom="15dp"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/ll_weixin_cirele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_selector"
                android:clickable="true">
                
            	<ImageView
                	android:layout_width="fill_parent"
            		android:layout_height="60dp"
            		android:src="@drawable/umeng_socialize_wxcircle" />
            	<TextView 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:text="微信朋友圈"
                	android:gravity="center_horizontal"
                	android:textColor="@color/grey"
                	android:paddingBottom="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_share_qq" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_selector"
                android:clickable="true">
                
            	<ImageView
                	android:layout_width="fill_parent"
            		android:layout_height="60dp"
            		android:src="@drawable/umeng_socialize_qq_on" />
            	<TextView 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:text="QQ分享"
                	android:gravity="center_horizontal"
                	android:textColor="@color/grey"
                	android:paddingBottom="15dp"/>
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_qr_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/border_selector"
                android:clickable="true">
                
            	<ImageView
                	android:layout_width="fill_parent"
            		android:layout_height="60dp"
            		android:src="@drawable/qr_code" />
            	<TextView 
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:text="二维码"
                	android:gravity="center_horizontal"
                	android:textColor="@color/grey"
                	android:paddingBottom="15dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    
</LinearLayout>









