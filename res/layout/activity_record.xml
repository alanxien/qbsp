<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white1">
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/RedTheme"
	        android:gravity="center"
	        android:padding="10dp"
	        android:text="@string/app_name"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:textStyle="bold" />
	    
	    <ImageView
	        android:id="@+id/iv_share"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:clickable="true"
	        android:onClick="share"
	        android:padding="5dp"
	        android:paddingRight="15dp"
	        android:src="@drawable/share" 
	        android:background="@drawable/btn_back_yellow"/>

	    <ImageView
	        android:id="@+id/iv_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:background="@drawable/btn_back_yellow"
	        android:clickable="true"
	        android:onClick="back"
	        android:src="@drawable/back_selected" />

    </RelativeLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        
        <TextView
            android:id="@+id/tv_profile" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"
            android:layout_marginRight="3dp"
            android:textColor="@color/GreenThem"
            android:textSize="16sp"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sidebar_titlt_back"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_task" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_record"
            android:layout_marginRight="3dp"
            android:textColor="@color/RedTheme"
            android:textSize="16sp"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sidebar_titlt_back"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_exchange" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exchange_record"
            android:layout_marginRight="3dp"
            android:textColor="@color/RedTheme"
            android:textSize="16sp"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sidebar_titlt_back"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"/>
        <TextView 
            android:id="@+id/tv_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invitation_record"
            android:textColor="@color/RedTheme"
            android:textSize="16sp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>





































