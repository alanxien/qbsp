<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    
    <TableLayout 
        android:layout_width="match_parent"  
    	android:layout_height="wrap_content"  
    	android:stretchColumns="*" 
    	android:background="@color/RedTheme">  
    <TableRow 
        android:background="@color/RedTheme" 
        android:padding="5dip">

        <TextView
            android:id="@+id/tv_xb_title"
            android:gravity="center"
            android:text="总赚积分数：0"
            android:textColor="@color/white1" 
            android:layout_span="2"
            android:textSize="17sp"/>
  
    </TableRow>  
    <TableRow 
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        >  
        <TextView
            android:text="任务总收入" 
            android:background="@color/white1"
            android:textColor="@color/grey"    
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView  
            android:id="@+id/tv_xb_total"  
            android:text="0" 
            android:background="@color/white1"
            android:textColor="@color/grey"   
            android:gravity="center"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_margin="1dp"/>  
    </TableRow>  
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView
            android:text="已兑换" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView
            android:id="@+id/tv_xb_exchanged"     
            android:text="0" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow> 
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        >  
        <TextView
            android:text="可兑换" 
            android:background="@color/white1"
            android:textColor="@color/grey"   
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView 
            android:id="@+id/tv_rmb_usable"  
            android:text="0" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp" 
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
    <TableRow 
        android:background="@color/RedTheme" 
        android:padding="5dip">

        <TextView
            android:gravity="center"
            android:text="各项详细记录"
            android:textColor="@color/white1" 
            android:layout_span="2"
            android:textSize="17sp"/>
  
    </TableRow>  
    <TableRow 
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        >  
        <TextView   
            android:text="任务次数" 
            android:background="@color/white1"
            android:textColor="@color/grey"    
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView
            android:id="@+id/tv_task_count"   
            android:text="0" 
            android:background="@color/white1"
            android:textColor="@color/grey"   
            android:gravity="center"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:layout_margin="1dp"/>  
    </TableRow>  
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView   
            android:text="兑换次数" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView
            android:id="@+id/tv_exchange_total"   
            android:text="0" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>     
    </TableRow> 
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView   
            android:text="邀请人数" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView   
            android:text="0" 
            android:id="@+id/tv_inv_total" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView   
            android:text="用户账户" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView
            android:id="@+id/tv_user_account"   
            android:text="88888" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView   
            android:text="QQ" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView 
            android:id="@+id/tv_qq_number"
            android:text="null" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp">  
        <TextView   
            android:text="支付宝账户" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView   
            android:id="@+id/tv_alipay_account"
            android:text="null" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
    <TableRow
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp">  
        <TextView   
            android:text="财付通账户" 
            android:background="@color/white1" 
            android:textColor="@color/grey"     
            android:layout_margin="1dip"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>  
        <TextView   
            android:id="@+id/tv_tenpay_account"
            android:text="null" 
            android:background="@color/white1" 
            android:textColor="@color/grey"   
            android:layout_margin="1dp"
            android:layout_width="0.0dip"
            android:padding="5dip"
            android:layout_weight="1"
            android:gravity="center"/>   
    </TableRow>
</TableLayout>
</LinearLayout>





































