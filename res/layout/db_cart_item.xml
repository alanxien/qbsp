<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="iphone"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tv_t_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_pic"
        android:paddingLeft="10dp"
        android:text="总需8888人次"
        android:textColor="@color/graythem1" />

    <TextView
        android:id="@+id/tv_r_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/tv_t_money"
        android:paddingLeft="10dp"
        android:text="@string/r_money"
        android:textColor="@color/graythem1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_t_money"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/shape_top_corner_no_bottom_line"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/picker_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_number_picker_minus" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:maxLength="2"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/grey" />

        <ImageView
            android:id="@+id/picker_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_number_picker_add" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_t_money"
        android:layout_toRightOf="@+id/iv_pic"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="参与人次"
        android:textColor="@color/graythem1" />

    <CheckBox
        android:id="@+id/cb_delete"
        style="@style/trench_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:checked="false" />

</RelativeLayout>