<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_select_light_red"
    android:padding="5dp" >
    
    <RelativeLayout 
        android:id="@+id/rl_app_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginRight="15dp">
    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_icon_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_app_icon"
        android:src="@drawable/icon_share_task" 
        /> 

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_app_icon"
        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/tv_app_name"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	            android:ellipsize="end"
        		android:singleLine="true" 
	            android:text="whats appdafdsfd"
	            android:textColor="@color/grey" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:text="大小："
                 android:textColor="@color/graythem1" />

             <TextView
                 android:id="@+id/tv_friend_share"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginRight="20dp"
                 android:text="赚友分享任务"
                 android:textColor="#F04540" 
                 android:visibility="gone"/>

             <TextView
                 android:id="@+id/tv_app_size"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_toRightOf="@+id/textView1"
                 android:maxLines="1"
                 android:text="22.5M"
                 android:textColor="@color/graythem1" />
         </RelativeLayout>
         
        <TextView
                android:id="@+id/tv_app_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
        		android:singleLine="true"
                android:text="描述" 
                android:textColor="@color/graythem1"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/tv_xb"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linelayout1"
        android:text="赚0.99元"
        android:textSize="17sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/RedTheme" />

</RelativeLayout>


